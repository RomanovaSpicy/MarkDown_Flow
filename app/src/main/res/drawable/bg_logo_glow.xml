<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="16dp" android:left="16dp" android:bottom="16dp" android:right="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_xl"/>
            <solid android:color="@color/primary_glow"/>
        </shape>
    </item>
    
    <!-- Middle glow -->
    <item android:top="8dp" android:left="8dp" android:bottom="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_xl"/>
            <solid android:color="@color/primary_glow_strong"/>
        </shape>
    </item>
    
    <!-- Container -->
    <item android:top="16dp" android:left="16dp" android:bottom="16dp" android:right="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_xl"/>
            <solid android:color="@color/bg_elevated"/>
            <stroke 
                android:width="@dimen/stroke_thin" 
                android:color="@color/highlight_subtle"/>
        </shape>
    </item>
</layer-list>
