<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_deep"
    android:fitsSystemWindows="true"
    tools:context=".SettingsActivity">

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_l"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Back Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_button"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_secondary"
                    app:icon="@drawable/ic_arrow_back"
                    app:iconTint="@color/text_secondary"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"/>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_m"
                    android:text="@string/settings_title"
                    android:textAppearance="@style/TextAppearance.App.Heading"/>
            </LinearLayout>

            <!-- Overlay Preview Section -->
            <TextView
                android:id="@+id/preview_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_l"
                android:text="@string/settings_overlay_preview"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Divider Line -->
            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/space_xxl"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@id/preview_label"
                app:layout_constraintBottom_toBottomOf="@id/preview_label"
                app:layout_constraintStart_toEndOf="@id/preview_label"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Preview Container -->
            <FrameLayout
                android:id="@+id/preview_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_m"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:padding="@dimen/space_xl"
                android:background="@drawable/bg_input_glass"
                app:layout_constraintTop_toBottomOf="@id/preview_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Dynamic Overlay Preview -->
                <include
                    android:id="@+id/overlay_preview"
                    layout="@layout/preview_overlay"/>
            </FrameLayout>

            <!-- Width Slider -->
            <TextView
                android:id="@+id/width_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_m"
                android:layout_marginTop="@dimen/space_l"
                android:text="@string/settings_width"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/preview_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/width_value"/>

            <TextView
                android:id="@+id/width_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_l"
                android:fontFamily="monospace"
                android:textAppearance="@style/TextAppearance.App.Caption"
                android:textColor="@color/primary_muted"
                app:layout_constraintTop_toTopOf="@id/width_label"
                app:layout_constraintBottom_toBottomOf="@id/width_label"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="250 dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/width_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_s"
                android:valueFrom="100"
                android:valueTo="400"
                android:stepSize="10"
                android:value="250"
                app:thumbColor="@color/primary"
                app:trackColorActive="@color/primary"
                app:trackColorInactive="@color/bg_surface"
                app:layout_constraintTop_toBottomOf="@id/width_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/width_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/width_slider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100"
                    android:textAppearance="@style/TextAppearance.App.Small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400"
                    android:textAppearance="@style/TextAppearance.App.Small"/>
            </LinearLayout>

            <!-- Height Slider -->
            <TextView
                android:id="@+id/height_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_m"
                android:layout_marginTop="@dimen/space_l"
                android:text="@string/settings_height"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/width_range"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/height_value"/>

            <TextView
                android:id="@+id/height_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_l"
                android:fontFamily="monospace"
                android:textAppearance="@style/TextAppearance.App.Caption"
                android:textColor="@color/primary_muted"
                app:layout_constraintTop_toTopOf="@id/height_label"
                app:layout_constraintBottom_toBottomOf="@id/height_label"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="5 rows"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/height_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_s"
                android:valueFrom="1"
                android:valueTo="10"
                android:stepSize="1"
                android:value="5"
                app:thumbColor="@color/primary"
                app:trackColorActive="@color/primary"
                app:trackColorInactive="@color/bg_surface"
                app:layout_constraintTop_toBottomOf="@id/height_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/height_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/height_slider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.App.Small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textAppearance="@style/TextAppearance.App.Small"/>
            </LinearLayout>

            <!-- Language Section -->
            <LinearLayout
                android:id="@+id/language_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_l"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/height_range"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="@dimen/space_s"
                    android:src="@drawable/ic_globe"
                    app:tint="@color/text_secondary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_language"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>

            <!-- Language Cards RecyclerView (2 columns grid) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/languages_recycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_m"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/language_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- About Section -->
            <TextView
                android:id="@+id/about_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_xxl"
                android:text="@string/settings_about"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/languages_recycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- About Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/about_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_m"
                android:backgroundTint="@color/glass_medium"
                app:cardCornerRadius="@dimen/radius_m"
                app:cardElevation="0dp"
                app:strokeColor="@color/highlight_subtle"
                app:strokeWidth="@dimen/stroke_thin"
                app:layout_constraintTop_toBottomOf="@id/about_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_m">

                    <!-- Version Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_version"
                            android:textAppearance="@style/TextAppearance.App.Caption" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0.0 (Beta)"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        style="@style/Widget.App.Divider"
                        android:layout_marginTop="@dimen/space_s"
                        android:layout_marginBottom="@dimen/space_s" />
                    <!-- Build Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_build"
                            android:textAppearance="@style/TextAppearance.App.Caption" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="2025.11"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        style="@style/Widget.App.Divider"
                        android:layout_marginTop="@dimen/space_s"
                        android:layout_marginBottom="@dimen/space_s" />
                    <!-- Developer Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_developer"
                            android:textAppearance="@style/TextAppearance.App.Caption" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sophie Romanova"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        style="@style/Widget.App.Divider"
                        android:layout_marginTop="@dimen/space_s"
                        android:layout_marginBottom="@dimen/space_s" />

                    <!-- Repository Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Repository"
                            android:textAppearance="@style/TextAppearance.App.Caption" />

                        <TextView
                            android:id="@+id/github_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GitHub"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="@color/purple_200" />
                    </LinearLayout>

                    <View
                        style="@style/Widget.App.Divider"
                        android:layout_marginTop="@dimen/space_s"
                        android:layout_marginBottom="@dimen/space_s" />

                    <!-- Inspired By Row -->
                    <TextView
                        android:id="@+id/inspired_by_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Inspired by SpicyChat.AI"
                        android:textAppearance="@style/TextAppearance.App.Caption" />

                    <View
                        style="@style/Widget.App.Divider"
                        android:layout_marginTop="@dimen/space_s"
                        android:layout_marginBottom="@dimen/space_s" />

                    <!-- Community Row -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Developed with the support of &quot;The Library of Snailexandria&quot; community."
                        android:textAppearance="@style/TextAppearance.App.Caption" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Data Section -->
            <TextView
                android:id="@+id/data_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_l"
                android:text="@string/settings_data"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/about_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Data Actions -->
            <LinearLayout
                android:id="@+id/data_actions_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_m"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/data_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Export Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/export_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_s"
                    android:backgroundTint="@color/glass_medium"
                    app:cardCornerRadius="@dimen/radius_m"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/highlight_subtle"
                    app:strokeWidth="@dimen/stroke_thin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_m"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_export"
                            android:textAppearance="@style/TextAppearance.App.Caption"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JSON"
                            android:textAppearance="@style/TextAppearance.App.Small"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Import Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/import_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_s"
                    android:backgroundTint="@color/glass_medium"
                    app:cardCornerRadius="@dimen/radius_m"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/highlight_subtle"
                    app:strokeWidth="@dimen/stroke_thin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_m"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_import"
                            android:textAppearance="@style/TextAppearance.App.Caption"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JSON"
                            android:textAppearance="@style/TextAppearance.App.Small"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Clear Data Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/clear_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/glass_medium"
                    app:cardCornerRadius="@dimen/radius_m"
                    app:cardElevation="0dp"
                    app:strokeColor="#33EB5757"
                    app:strokeWidth="@dimen/stroke_thin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_m"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_clear"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="@color/error"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⚠️"
                            android:textAppearance="@style/TextAppearance.App.Small"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Spacer View for bottom inset -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fitsSystemWindows="true"
                app:layout_constraintTop_toBottomOf="@+id/data_actions_container"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>