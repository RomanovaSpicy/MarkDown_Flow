<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlay_preview_card"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/glass_medium"
    app:cardCornerRadius="@dimen/radius_m"
    app:cardElevation="0dp"
    app:strokeColor="@color/highlight_subtle"
    app:strokeWidth="@dimen/stroke_thin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Preview Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/space_s"
            android:background="#33000000"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overlay_preview_header"
                android:textAppearance="@style/TextAppearance.App.Small"/>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/space_xs"
                android:background="@drawable/bg_button_secondary"/>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_button_secondary"/>
        </LinearLayout>

        <!-- Preview Items -->
        <LinearLayout
            android:id="@+id/preview_items_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@color/bg_elevated"
            android:showDividers="middle">
            <!-- Items are added programmatically -->
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
